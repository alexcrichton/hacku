YUI().use('anim', 'node', function(Y){
  Y.one('body').append("<%= escape_javascript render('canvas') %>");
  Y.one('#o3d').setStyles({
    width: '98%',
    height: (jQuery(window).height() * 0.95) + 'px'
  });

  var a = new Y.Anim({
    node: '#wrapper',
    to: {height: 0},
    duration: 0.5,
    easing: Y.Easing.easeOut
  });
  a.on('end', function() {
    a.get('node').remove();

    initClient(<%= raw @output %>);
  });

  a.run();
});
